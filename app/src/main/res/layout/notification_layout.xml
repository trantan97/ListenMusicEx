<?xml version=
 	  	"1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_primary"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_song"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_8" />

    <ImageView
        android:id="@+id/image_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_play_24dp"
        android:padding="@dimen/dp_8"/>

    <TextView
        android:id="@+id/text_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_song"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/image_song"
        android:layout_toStartOf="@id/image_play"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_name_song"
        android:textColor="@color/color_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_song"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/image_song"
        android:layout_toStartOf="@id/image_play"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_singer"
        android:textColor="#7dffffff" />

</RelativeLayout>
